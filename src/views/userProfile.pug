extends partials/base


block content
    form(method='get' action='/search')
        input(name='keyword' type='text' placeholder='search' required)
        input(type='submit' value='search')
    div
        h2=pageTitle 
        form(method='post')
            input(name='email' value=userDTO.email type='email' placeholder='*Email(aaa@gmail.com)' required)
            if duplicateEmail
                small *Duplicate Email.
            input(name='username' value=userDTO.username type='text' placeholder='*Username' required)
            if duplicateUsername
                small *Duplicate Username.
            input(name='password' type='password' placeholder='*Password' required)
            if passwordError
                small *Confirm the passwords.
            input(name='repassword' type='password' placeholder='*Confirm password' required)
            input(name='name' value=userDTO.name type='text' placeholder='*Name' required)
            input(name='location' value=userDTO.location type='text' placeholder='Location')
            input(type='submit' value='Edit')
    
