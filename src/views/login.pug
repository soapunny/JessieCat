extends base


block content
    div
        h2=pageTitle 
        if errorMessage
            small=errorMessage
        form(method='post')
            input(name='email' value=email type='email' placeholder='Email' required)
            input(name='password' value=password type='password' placeholder='Password' required)
            input(type='submit' value='Sign In')
            hr
            a(href=`/user/github/login`) Continue with Github &rarr;
