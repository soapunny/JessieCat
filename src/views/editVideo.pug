extends base


block content 
    h1 Edit Video
    form(method="POST" enctype='multipart/form-data')
        label(for='video') Video( File size has to be under 10MB)
        input(name='video' type='file' accept='video/*' id='video')
        input(name='title' type='text' placeholder='Title' maxLength='80' value=video.title required)
        input(name='description' type='text' placeholder='description' maxLength='200' value=video.description)
        input(name='hashtags' type='text' placeholder='hashtags, separated by comma' value=formatUtil.removeHashtags(video.hashtags))
        input(type="submit" value="Edit")
        a(href=`/video/${video._id}`) &larr; back
